<turbo-frame id="product_<%= product.id %>">
  <div class="col-md-4 mb-4">
    <div class="card">
      <% if product.image.attached? %>
        <%= image_tag url_for(product.image), class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text"><%= product.description %></p>
        <p><strong>Price:</strong> $<%= product.price %></p>
        <p><strong>Quantity:</strong> <%= product.quantity %></p>
        <div style="display: flex; gap: 10px; width: 100%;">
          <%= link_to "Edit", edit_product_path(product), class: "btn btn-primary",
                      style: "flex: 1; padding: 10px 20px; font-size: 16px;",
                      data: { turbo_frame: "product_#{product.id}" } %>

          <%= button_to "Delete", product,
                        method: :delete,
                        class: "btn btn-danger",
                        style: "flex: 1; padding: 10px 20px; font-size: 16px;",
                        data: { turbo_frame: "products_list" } %>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>



